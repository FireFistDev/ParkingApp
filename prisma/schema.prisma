// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum CarsType {
  SEDAN
  JEEP
  HECHBEACK
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  userName String
  password String
  balance  Int    @default(100)
  cars     Car[]
}

model Car {
  id               Int              @id @default(autoincrement())
  ownerId          Int
  owner            User             @relation(fields: [ownerId], references: [id])
  carName          String
  serialNumber     String
  type             CarsType
  parkedCar        currentParking? // Define the relationship in the Car model
  parkingHistories ParkingHistory[]
}

model ParkingZone {
  id               Int              @id @default(autoincrement())
  zoneName         String           @unique
  zoneAddress      String
  pricePerHour     Int
  currentParking   currentParking?
  parkingHistories ParkingHistory[]
}

model currentParking {
  id        Int         @id @default(autoincrement())
  zoneId    Int         @unique
  carId     Int         @unique
  startTime DateTime
  zone      ParkingZone @relation(fields: [zoneId], references: [id])
  car       Car         @relation(fields: [carId], references: [id])
}

model ParkingHistory {
  id        Int         @id @default(autoincrement())
  zoneId    Int
  carId     Int
  startTime DateTime
  endTime   DateTime
  zone      ParkingZone @relation(fields: [zoneId], references: [id])
  car       Car         @relation(fields: [carId], references: [id])
}


